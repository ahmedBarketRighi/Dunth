<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SecondAppointementPage">

    <com.google.android.material.textfield.TextInputLayout
        style="@style/ThemeOverlay.Material3.AutoCompleteTextView.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/firstnamepatientlayout"
        android:layout_marginTop="32dp"

        android:hint="First Name of patient"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="32dp"
        app:layout_goneMarginTop="32dp"
        app:helperText="required"
        app:helperTextTextColor="#FF0000"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.055"
        tools:layout_editor_absoluteX="33dp">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/firstnameofpatient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:textColor="@color/black"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/ThemeOverlay.Material3.AutoCompleteTextView.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lastnamelayout"
        android:layout_marginTop="32dp"

        android:hint="Last Name of patient"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="32dp"
        app:layout_goneMarginTop="32dp"
        app:helperText="required"
        app:helperTextTextColor="#FF0000"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.055"
        tools:layout_editor_absoluteX="33dp">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/lastnameofpatient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:textColor="@color/black"
            />
    </com.google.android.material.textfield.TextInputLayout>





    <com.google.android.material.textfield.TextInputLayout
        style="@style/ThemeOverlay.Material3.AutoCompleteTextView.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/emailofpatientlayout"
        android:layout_marginTop="32dp"

        android:hint="Email"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="32dp"
        app:layout_goneMarginTop="32dp"
        app:helperText="required"
        app:helperTextTextColor="#FF0000"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.055"
        tools:layout_editor_absoluteX="33dp">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/emailofpatient"
            android:inputType="textEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:textColor="@color/black"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/ThemeOverlay.Material3.AutoCompleteTextView.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="32dp"
        android:id="@+id/phoneofpatientlayout"
        android:hint="phone"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="32dp"
        app:layout_goneMarginTop="32dp"
        app:helperText="required"
        app:helperTextTextColor="#FF0000"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.055"
        tools:layout_editor_absoluteX="33dp">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/phoneofpatient"
            android:inputType="phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:textColor="@color/black"
            />
    </com.google.android.material.textfield.TextInputLayout>
    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginStart="32dp"
        android:text="Gender:"
        android:textStyle="italic"
        android:textColor="@color/black"
        android:textSize="20sp"
        />
    <RadioGroup
        android:id="@+id/radioGroupgender1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radioButtonman"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Man" />

        <RadioButton
            android:id="@+id/radioButtonwoman"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="woman" />


    </RadioGroup>
    <Button
        android:id="@+id/complete_register"
        android:layout_width="275dp"
        android:layout_marginTop="54dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/black"
        android:layout_gravity="center"
        android:textSize="22dp"
        android:text="Complete register"

        />







</LinearLayout>