<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"


    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="199dp"
            android:layout_height="wrap_content"
            android:text="PRESCRIPTION"
            android:gravity="center"
            android:fontFamily="@font/dancing"
            android:background="@drawable/btn_background_2"
            android:backgroundTint="@color/lavender"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="23dp"

            android:textColor="@color/mtrl_textinput_default_box_stroke_color"
            android:textSize="25sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/clinicname12"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:fontFamily="@font/dancing"
            android:text="Al-Anwar Clinic, Al-Bahjah District, Al-Fadila Street, Branch No. 55"
            android:layout_gravity="center"
            android:textColor="@color/lavender"
            android:layout_marginBottom="12dp"
            android:textSize="22sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/date_prescription12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/comfortaabold"
            android:text="Date: .../../.."
            android:layout_marginTop="10dp"
            android:layout_marginLeft="220dp"
            android:textColor="@color/black"
            android:textSize="15sp"
            />

        <TextView
            android:id="@+id/fullnamepresc12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/shine"
            android:text="Full Name:..."
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/doctornamepresc12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/shine"
            android:text="Doctor Name:..."
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="bold"/>



        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/comfortaabold"
            android:text="Medications :"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="12dp"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="bold"/>




        <LinearLayout
            android:id="@+id/linear_layout_container12"
            android:layout_below="@id/number_edit_text"
            android:layout_width="280dp"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"/>




        <TextView
            android:id="@+id/signaturepresc12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:hint="Signature..."

            android:fontFamily="@font/shine"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="200dp"
            android:textColor="@color/black"
            android:textSize="19sp"
            android:textStyle="bold"/>




    </LinearLayout>


</ScrollView>