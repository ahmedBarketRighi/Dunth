<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView

        android:layout_width="117dp"
        android:layout_height="41dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="12dp"
        android:backgroundTint="@color/lavender"
        android:gravity="center"
        android:text="SICK"
        android:textAppearance="@color/white"
        android:textColor="#000000"
        android:textSize="29dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/sick_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/sick_image"
        android:layout_width="144dp"
        android:layout_height="219dp"
        android:layout_marginStart="204dp"
        android:layout_marginTop="204dp"

        android:background="@drawable/white_background"
        android:backgroundTint="@color/lavender"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/sick" />

    <ImageView
        android:id="@+id/doctor_image"
        android:layout_width="167dp"
        android:layout_height="218dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="204dp"

        android:background="@drawable/white_background"
        android:backgroundTint="@color/lavender"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/doctor" />

    <TextView
        android:layout_width="117dp"
        android:layout_height="41dp"
        android:layout_marginStart="28dp"
        android:layout_marginBottom="12dp"
        android:backgroundTint="#111C73"
        android:text="DOCTOR"
        android:textAppearance="@color/white"
        android:textColor="#626ED3"
        android:textSize="29dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/doctor_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>