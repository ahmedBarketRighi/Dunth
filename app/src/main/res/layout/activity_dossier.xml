<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Dossier">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dossier Information:"

            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:textColor="@color/blue"
            android:textSize="32sp"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Personal Information:"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="bold"/>
        <com.google.android.material.textfield.TextInputLayout
            style="@style/ThemeOverlay.Material3.AutoCompleteTextView.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:id="@+id/fullnamelayout"
            android:hint="Full name"
            android:layout_marginEnd="32dp"
            android:layout_marginStart="10dp"
            app:layout_goneMarginTop="32dp"
            app:helperText="required"
            app:helperTextTextColor="#FF0000"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.055"
            tools:layout_editor_absoluteX="33dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/fullname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                android:textColor="@color/black"
                />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            style="@style/ThemeOverlay.Material3.AutoCompleteTextView.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:id="@+id/fullfathernamelayout"
            android:hint="Full Father name"
            android:layout_marginEnd="32dp"
            android:layout_marginStart="10dp"
            app:layout_goneMarginTop="32dp"
            app:helperText="required"
            app:helperTextTextColor="#FF0000"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.055"
            tools:layout_editor_absoluteX="33dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/fullfathername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                android:textColor="@color/black"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/ThemeOverlay.Material3.AutoCompleteTextView.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:id="@+id/fullmothernamelayout"
            android:hint="Full Mother name"
            android:layout_marginEnd="32dp"
            android:layout_marginStart="10dp"
            app:layout_goneMarginTop="32dp"
            app:helperText="required"
            app:helperTextTextColor="#FF0000"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.055"
            tools:layout_editor_absoluteX="33dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/fullmothername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                android:textColor="@color/black"
                />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            style="@style/ThemeOverlay.Material3.AutoCompleteTextView.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:id="@+id/grouplaout"
            android:hint="Group A+/0+/.."
            android:layout_marginEnd="32dp"
            android:layout_marginStart="10dp"
            app:layout_goneMarginTop="32dp"
            app:helperText="required"
            app:helperTextTextColor="#FF0000"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.055"
            tools:layout_editor_absoluteX="33dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/groupdossier"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                android:textColor="@color/black"
                />
        </com.google.android.material.textfield.TextInputLayout>





        <com.google.android.material.textfield.TextInputLayout
            style="@style/ThemeOverlay.Material3.AutoCompleteTextView.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:id="@+id/adreess_layout"
            android:hint="Address"
            android:layout_marginEnd="32dp"
            android:layout_marginStart="10dp"
            app:layout_goneMarginTop="32dp"
            app:helperText="required"
            app:helperTextTextColor="#FF0000"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.055"
            tools:layout_editor_absoluteX="33dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/adressuser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                android:textColor="@color/black"
                />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            style="@style/ThemeOverlay.Material3.AutoCompleteTextView.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:id="@+id/dateofbirthlayout"
            android:hint="Date of birth"
            android:layout_marginEnd="32dp"
            android:layout_marginStart="10dp"
            app:layout_goneMarginTop="32dp"
            app:helperText="required"
            app:helperTextTextColor="#FF0000"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.055"
            tools:layout_editor_absoluteX="33dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/dateofbirth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="MM-DD-YYYY"
                android:inputType="date"
                android:layout_marginTop="48dp"
                android:textColor="@color/black"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/ThemeOverlay.Material3.AutoCompleteTextView.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:id="@+id/Heightlayout"
            android:hint="Height (m)"
            android:layout_marginEnd="32dp"
            android:layout_marginStart="10dp"
            app:layout_goneMarginTop="32dp"
            app:helperText="required"
            app:helperTextTextColor="#FF0000"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.055"
            tools:layout_editor_absoluteX="33dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/Height"
                android:inputType="numberDecimal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                android:textColor="@color/black"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/ThemeOverlay.Material3.AutoCompleteTextView.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:id="@+id/Weightlayout"
            android:hint="Weight (kg)"
            android:layout_marginEnd="32dp"
            android:layout_marginStart="10dp"
            app:layout_goneMarginTop="32dp"
            app:helperText="required"
            app:helperTextTextColor="#FF0000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.055"
            tools:layout_editor_absoluteX="33dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/Weight"
                android:inputType="numberDecimal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                android:textColor="@color/black"
                />
        </com.google.android.material.textfield.TextInputLayout>


            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginLeft="10dp"
                android:text="Gender:"
                android:textStyle="italic"
                android:textColor="@color/black"
                android:textSize="20sp"
                />
            <RadioGroup
                android:id="@+id/radioGroupgender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radioButton1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Man" />

                <RadioButton
                    android:id="@+id/radioButton2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="woman" />

                <RadioButton
                    android:id="@+id/radioButton3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Child" />





            </RadioGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medical History:"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:textStyle="bold"/>
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginLeft="10dp"
                android:text="Existing medical conditions"
                android:textStyle="italic"
                android:textColor="@color/black"
                android:textSize="20sp"
                />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:id="@+id/chronic_illnesses_layout"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:hint="chronic illnesses أمراض مزمنة"
                app:hintTextColor="@color/black"
                android:layout_marginEnd="32dp"
                android:layout_marginStart="10dp"
                app:layout_goneMarginTop="32dp"
                app:helperText="optional"
                app:helperTextTextColor="#000000"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"

                app:layout_constraintVertical_bias="0.055"
                tools:layout_editor_absoluteX="33dp">

                <AutoCompleteTextView
                    android:id="@+id/autoCompleteTextView_chronic"
                    android:layout_width="match_parent"
                    android:paddingLeft="8dp"
                    android:paddingTop="12dp"
                    android:layout_height="44dp"
                    android:textSize="14dp"

                    android:layout_marginTop="48dp"
                    android:textColor="@color/black" />

            </com.google.android.material.textfield.TextInputLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="32dp"
                android:layout_marginLeft="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="If you haveupload a picture of clinging"
                    android:textColor="@color/black"
                    android:textSize="10sp" />

                <ImageView
                    android:id="@+id/chronic_ill_image"
                    android:layout_width="380dp"
                    android:layout_height="200dp"
                    android:src="@drawable/cloud_upload"


                    />
            </LinearLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/allergieslayout"
                android:layout_marginTop="32dp"
                android:hint="allergies حساسية"
                android:layout_marginEnd="32dp"
                android:layout_marginStart="10dp"
                app:layout_goneMarginTop="32dp"
                app:helperText="optional"
                app:helperTextTextColor="#000000"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.055"
                tools:layout_editor_absoluteX="33dp">

                <AutoCompleteTextView
                    android:id="@+id/autocompletetv_allergie"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:paddingLeft="8dp"
                    android:paddingTop="12dp"
                    android:textSize="14dp"
                    android:layout_marginTop="48dp"
                    android:textColor="@color/black" />

            </com.google.android.material.textfield.TextInputLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="32dp"
                android:layout_marginLeft="10dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="If you haveupload a picture of clinging"
                    android:textColor="@color/black"
                    android:textSize="10sp" />

                <ImageView
                    android:id="@+id/allergie_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/cloud_upload"

                    android:layout_weight="1"
                    android:scaleType="centerInside" />
            </LinearLayout>

















        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Medications :"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="bold"/>
        <LinearLayout
            android:id="@+id/containerLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <EditText
                android:id="@+id/editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Doliprane,Paracetamole.." />

            <LinearLayout
                android:id="@+id/wordsLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Insurance Information:"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="bold"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="32dp"
            android:layout_marginLeft="10dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Your get well card"
                android:textColor="@color/black"
                android:textSize="10sp" />

            <ImageView
                android:id="@+id/insurance_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/cloud_upload"

                android:layout_weight="1"
                android:scaleType="centerInside" />
        </LinearLayout>

        <RadioButton
            android:id="@+id/radioButtonaccept"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="accepte all the conditions and permision " />


        <Button
            android:id="@+id/register_your_dossier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="12dp"

            android:backgroundTint="@color/blue"
            android:text="register your dossier" />





    </LinearLayout>

</ScrollView>