<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#FFFFFF"
    tools:context=".Med_Info">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:backgroundTint="@color/white"

    >



    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginTop="1dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/health_page" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name of the disease"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="3dp"
        android:textColor="@color/black"
        android:textSize="32sp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/textV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"

        android:layout_marginEnd="16dp"

    android:ellipsize="end"
    android:text="@string/description_of_diseases"
    android:textDirection="ltr"
    android:textSize="14sp" />


   <TextView
        android:id="@+id/textView7"
       android:layout_marginLeft="3dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="@string/link"
        android:textSize="14dp"
         />
    <ImageView
        android:id="@+id/imageV"
        android:layout_width="match_parent"

        android:layout_height="400dp"
        android:layout_marginTop="1dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/causes_diseasesrv" />

    <ImageView
        android:id="@+id/imageV"
        android:layout_width="match_parent"

        android:layout_height="400dp"
        android:layout_marginTop="1dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/ways_to_fight_the_diseasesrv" />

    <Button
        android:id="@+id/btngotochatgpt"
        android:layout_gravity="center|bottom"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="22dp"

        android:drawableStart="@drawable/chatg2"
        android:drawableTint="@color/black"
        android:backgroundTint="@color/black"

    android:textSize="22dp"
    android:text="chat gpt assit"/>

</LinearLayout>



</ScrollView>